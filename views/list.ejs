<%- include("header") %>

<body>

    <div id="heading" class="box">
        <h1>
            <%= listTitle %>
        </h1>
    </div>
    <div class="box">
        <% newListItems.forEach((item) => { %>
            <div class="item">
                <input type="checkbox">
                <p><%= item.name %></p>
            </div>
        <% }) %>

        <form class="item" action="/" method="POST">
            <input type="text" name="newItem" placeholder="New To Do Item" autocomplete="off">
            <button type="submit" name="list" value=<%=listTitle %>>+</button>
        </form>
    </div>

</body>

<%- include("footer") %>